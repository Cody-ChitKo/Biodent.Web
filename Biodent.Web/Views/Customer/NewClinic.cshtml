@model IEnumerable<Biodent.Models.UsersModel>

@{
    ViewBag.Title = "NewClinic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-12">

            <div class="card card-info">
                <!--Header Button Region-->
                <div class="card-header">
                    <div class="col-md-12">
                        <h4>New Register Clinic List</h4>
                    </div>

                </div>
                <!--/.Header Button Region-->
                <!-- /.card-header -->
                <div class="card-body">

                    <table id="example1" class="table table-hover table-sm dataTable">
                        <thead>
                            <tr role="row">
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">
                                    Clinic Name
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">
                                    Email
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">
                                    Phone No
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">
                                    Region Name
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">
                                    Address
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1">
                                    Created Date
                                </th>
                                <th class="sorting_asc_disabled sorting_desc_disabled" tabindex="0" rowspan="1" colspan="1">
                                    Action
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr role="row" class="odd">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UsersName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RegionName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td class="sorting_1">
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Approve", "Approve", new { id = item.UsersID, Email = item.Email }, new { @class = "btn btn-primary" })
                                        @Html.ActionLink("Reject", "Reject", new { id = item.UsersID }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
}