@model Biodent.Models.UsersModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@using (Html.BeginForm())
{

    <div class="card card-info">
        @Html.HiddenFor(model => model.UsersID)
        <div class="form-group">
            <div class="col-md-6">
                <label for="exampleInputCustomerName">Name</label>
                @Html.EditorFor(model => model.UsersName, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <label for="exampleInputEmail">Email</label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-6">
                <label for="exampleInputPassword">New Password</label>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <label for="exampleInputEmail">Confirm Password</label>
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-bottom:20px;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

