@model IEnumerable<Biodent.Models.GiftCardModel>

@{
    ViewBag.Title = "GiftCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">

        <div class="card">
            <!--Header Button Region-->
            <div class="card-header">
                <div class="col-md-2">
                    @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-primary" })
                </div>

            </div>
            <!--/.Header Button Region-->
            <div class="card-body">
                <table id="example1" class="table table-hover table-sm dataTable" role="grid">
                    <thead>
                        <tr role="row">
                            <th class="sorting">
                                Package Name
                            </th>
                            <th>
                                Giftcard Code
                            </th>

                            <th>
                                Gifrcard Name
                            </th>
                            <th>
                                Gifrcard Level
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Action
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr role="row" class="odd">
                                <td class="sorting_1">
                                    @Html.DisplayFor(modelItem => item.PackageName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiftCardCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiftCardName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiftCardLevel)
                                </td>
                                <td>
                                    <img src="data:image/png;base64,@(@Html.DisplayFor(modelItem => item.GiftCardImageUrl))" alt="Giftcard Image" />
                                </td>

                                <td class="dtBtnPosition">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.GiftCardId }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.GiftCardId }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>




        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>


