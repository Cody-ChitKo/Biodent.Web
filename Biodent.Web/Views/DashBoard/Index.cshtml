@model Biodent.Models.DashBoardModel
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>


</head>

<body>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-12">

                    <div class="card">
                        <div class="card-header bg-secondary bg-gradient">
                            <h5 class="card-title">Monthly Order Report</h5>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
                                        <i class="fas fa-wrench"></i>
                                    </button>
                                </div>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">

                                <div class="col-md-4">

                                    <div class="info-box mb-3 bg-info">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">Processing Order</span>
                                            <span class="info-box-number">@Html.DisplayFor(model => model.ProcessOrder)</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <div class="info-box mb-3 bg-warning">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">Pending Order</span>
                                            <span class="info-box-number">@Html.DisplayFor(model => model.PendingOrder)</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <div class="info-box mb-3 bg-success">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">Delivering Order</span>
                                            <span class="info-box-number">@Html.DisplayFor(model => model.DeliveringOrder)</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>

                                    <div class="info-box mb-3 bg-warning">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">To Delivery Order</span>
                                            <span class="info-box-number">@Html.DisplayFor(model => model.ToDeliveryOrder)</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                </div>
                                <!-- /.col -->
                                <div class="col-md-4">
                                    <div class="info-box mb-3 bg-success">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">CloseOrder</span>
                                            <span class="info-box-number">@Html.DisplayFor(model => model.CloseOrder)</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>

                                    <div class="info-box mb-3 bg-danger">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">Credit Invoice</span>
                                            <span class="info-box-number">@Html.DisplayFor(model => model.BalanceOrder)</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <!-- /.info-box -->
                                    <div class="info-box mb-3 bg-info">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">Total Processing OrderItem</span>
                                            <span class="info-box-number">@Html.DisplayFor(model => model.TotalProcessingOrderItem)</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <!-- /.info-box -->

                                    <div class="info-box mb-3 bg-info">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">New Clinic</span>
                                            <span class="info-box-number">@Html.DisplayFor(model => model.NewCustomer)</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <!-- /.info-box -->
                                </div>
                                <!-- /.col -->

                                <div class="col-md-4">
                                    <div class="info-box mb-3 bg-success">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">Total Clinic</span>
                                            <span class="info-box-number">@Html.DisplayFor(model => model.TotalCustomer)</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>

                                    <div class="info-box mb-3 bg-danger">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">Add New</span>
                                            <span class="info-box-number">0</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <!-- /.info-box -->
                                    <div class="info-box mb-3 bg-info">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">Add New</span>
                                            <span class="info-box-number">0</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <!-- /.info-box -->

                                    <div class="info-box mb-3 bg-info">
                                        <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                        <div class="info-box-content">
                                            <span class="info-box-text">New Clinic</span>
                                            <span class="info-box-number">@Html.DisplayFor(model => model.NewCustomer)</span>
                                        </div>
                                        <!-- /.info-box-content -->
                                    </div>
                                    <!-- /.info-box -->
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- ./card-body -->
                        <div class="card-footer">
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

        </div><!--/. container-fluid -->
    </section>
    <!-- /.content -->
