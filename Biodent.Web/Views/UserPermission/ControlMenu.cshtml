@model Biodent.Models.UsersPermissionModel
@{
    ViewBag.Title = "ControlMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="form-horizontal">

    <h4>User Control List</h4>
    <hr />

    <div class="form-group">

        <div class="form-group">


            <!--User Level name-->
            <div class="row">
                <div class="col-sm-12 col-md-2">
                    <label for="exampleInputUserLevel">UsersName :  </label>
                </div>

                <div class="col-sm-12 col-md-10">
                    <label for="exampleInputUserLevel">@Model.Users.UsersName</label>
                    @Html.HiddenFor(model => model.UsersID)
                </div>
            </div>

        </div>

    </div>

    <form class="form-horizontal">

        <div class="card-body">
            <!-- It is just blank -->

            <div class="col-sm-12">

                <!--Page Control-->
                <div class="card card-outline card-primary">

                    <div class="card-header">
                        <h3 class="card-title">&nbsp;  Control Menu</h3>
                    </div>

                    <div class="card-body">

                        <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                            <thead>
                                <tr role="row">

                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 219.55px;" aria-label="Browser: activate to sort column ascending">
                                        Control Name
                                    </th>
                                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 219.55px;" aria-label="Browser: activate to sort column ascending">
                                        Permission Control
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var name in Model.Controls)
                                {
                                    @Html.HiddenFor(model => name)
                                    ;
                                    <tr role="row" class="odd">
                                        @Html.HiddenFor(modelItem => name.Control_Id)
                                        @Html.HiddenFor(modelItem => name.Control_URL)
                                        <td class="sorting_1">@Html.DisplayFor(modelItem => name.Control_Name)</td>
                                        <td class="dtBtnPosition">
                                            @*<button class="btn btn-outline-secondary">*@

                                            <!--Old button style-->
                                            @*Html.ActionLink("Control Setting", "Edit", new { id = item.UserLevel_Id }, new { @class = "btn btn-primary" })*@
                                            <div class="default">
                                                <!--Writing Chit Ko Ko-->
                                                @Html.ActionLink("Permission Setting", "PermissionDetails", "UserPermission", new { control_id = name.Control_Id, usersId = Model.UsersID }, new { @class = "btn btn-outline-secondary" })
                                            </div>
                                            @*</button>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>
                </div>


            </div>

        </div>
        <!-- /.card-body -->
    </form>

</div>
