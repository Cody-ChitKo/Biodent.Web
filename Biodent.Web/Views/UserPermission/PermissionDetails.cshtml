 @model Biodent.Models.UsersPermissionModel
@{
    ViewBag.Title = "PermissionDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "UserPermission", FormMethod.Post))
{
    <div class="card-body">
        <link href="~/Scripts/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
        @Html.HiddenFor(model => model.PermissionId, new { @class = "iCheck-helper" })
        @Html.HiddenFor(model => model.UsersID)
        @Html.HiddenFor(model => model.Control_Id)
        <h4>Edit User Level Control Permission</h4>
        <hr />

        <!--Start Form Group-->
        <div class="form-group">

            <!--Show User Level and Control Name-->
            <div class="form-group">
                <div class="card-header">
                    <!--User Level name-->
                    <div class="row">
                        <div class="col-md-2">
                            <label for="exampleInputUserLevel">User Level :</label>
                        </div>

                        <div class="col-md-10">
                            <label for="exampleInputUserLevel">@Model.UsersName</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2">
                            <label for="exampleInputControlName">Control Name :</label>

                        </div>

                        <div class="col-md-10">
                            <label for="exampleInputControlName">@Model.Control_URL</label>
                        </div>
                    </div>
                </div>

            </div>
            <!--Show User Level and Control Name-->
            <!--Show Body for permission-->
            <form class="form-horizontal">

                <div class="card-body">

                    <div class="col-sm-12">

                        <!--Standard Action Control-->
                        <div class="card card-outline card-primary">

                            <div class="card-header">
                                <h3 class="card-title">&nbsp; Standard Action</h3>
                            </div>

                            <div class="card-body">

                                <div class="form-group row">

                                    <label class="col-sm-3 col-form-label">Full Access</label>
                                    <div class="col-sm-3">
                                        @*<input name="IsChecked" type="checkbox" value="false">*@
                                        @Html.CheckBox("Full_Access", (Model.Full_Access == true) ? true : false, new { @class = "icheck-primary d-inline" })
                                    </div>

                                    <label class="col-sm-3 col-form-label">Create</label>
                                    <div class="col-sm-3">
                                        @Html.CheckBox("Create_Access", (Model.Create_Access == true )?true: false, new { @class = "icheck-primary" })
                                    </div>

                                    <label class="col-sm-3 col-form-label">Edit </label>
                                    <div class="col-sm-3">
                                        @Html.CheckBox("Edit_Access", (Model.Edit_Access == true )?true: false, new { @class = "icheck-primary" })
                                    </div>

                                    <label class="col-sm-3 col-form-label">Delete </label>
                                    <div class="col-sm-3">
                                        @Html.CheckBox("Delete_Access", (Model.Delete_Access == true) ?true: false, new { @class = "icheck-primary" })
                                    </div>

                                    <label class="col-sm-3 col-form-label">List </label>
                                    <div class="col-sm-3">
                                        @Html.CheckBox("List_Access", (Model.List_Access ==true )?true: false, new { @class = "icheck-primary" })
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!--Standard Action Control-->
                    <!--Extra Action Control-->

                    <div class="card card-outline card-primary">

                        <div class="card-header">
                            <h3 class="card-title">&nbsp; Extra Action</h3>
                        </div>


                        <div class="card-body">

                            <div class="form-group row">

                                <label for="inputEmail3" class="col-sm-1 col-form-label">Approve</label>
                                <div class="col-sm-1">
                                    @Html.CheckBox("Approve_Access", (Model.Approve_Access ==true)?true: false, new { @class = "icheck-primary" })
                                </div>

                            </div>

                        </div>

                    </div>
                    <!--Extra Action Control-->
                </div>
            </form>
        </div><!-- /.End form group -->

        <div class="row float-right mr-4" style="background:none;">
            @Html.ActionLink("Back to List", "Index", "UserPermission", new { @class = "btn btn-primary" })
            <button type="submit" class="btn btn-success mr-3 ml-3">Save</button>
            @*<button type="submit" class="btn btn-default float-right">Cancel</button>*@
        </div>

        <!-- /.card-footer -->


    </div>

    @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-bottom:20px;">
                <input type="submit" value="Back" class="btn btn-primary" />
                @Html.ActionLink("Back to List", "Index", "UserLevel", new { @class = "btn btn-primary" })
            </div>
        </div>*@
}

