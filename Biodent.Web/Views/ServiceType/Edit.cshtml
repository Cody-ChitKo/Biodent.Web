@model Biodent.Models.ServiceTypeModel

@{
    ViewBag.Title = "Service Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{

    <div class="card card-info">
        <div class="card-header">
            <h2 class="card-title">Service Type</h2>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ServiceTypeId)

        <div class="form-group">
            <div class="col-md-6">
                <label for="exampleInputDepartmentName">Department Name</label>
                @Html.EditorFor(model => model.ServiceType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ServiceType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-bottom:20px;">
                <input type="submit" value="Update" class="btn btn-primary" />
                @Html.ActionLink("Back to List", "Index", "ServiceType", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
