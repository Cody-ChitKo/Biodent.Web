@model IEnumerable<Biodent.Models.ServiceTypeModel>

@{
    ViewBag.Title = "ServiceType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">

        <div class="card">
            <!--Header Button Region-->
            <div class="card-header">
                <div class="col-md-2">
                    @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-primary  far fa-plus-square" })
                </div>

            </div>
            <!--/.Header Button Region-->
            <!-- /.card-header -->
            <div class="card-body">

                <table id="example1" class="table table-sm table-hover dataTable">
                    <thead>
                        <tr role="row">
                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 50.55px;" aria-label="Browser: activate to sort column ascending">
                                ServiceType Name
                            </th>

                            <th class="sorting_asc_disabled sorting_desc_disabled" tabindex="0" rowspan="1" colspan="1" style="width: 50.267px;" aria-label="CSS grade: activate to sort column ascending">
                                Action
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr role="row" class="odd">
                                <td class="sorting_1">@Html.DisplayFor(modelItem => item.ServiceType)</td>
                                <td class="dtBtnPosition">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ServiceTypeId }, new { @class = "btn btn-primary fas fa-edit" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ServiceTypeId }, new { @class = "btn btn-danger fas fa-times-circle" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>